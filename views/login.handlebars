<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Login</h1>
      {{> messages}}
      {{#if message}}
        message
      {{/if}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" />
        </div>
        <button type="submit" class="btn btn-outline-primary btn-block">Login</button>
        <a href="/auth/facebook" class="btn btn-outline-info btn-block">Facebook Login</a>
        <a href="/auth/google" class="btn btn-outline-danger btn-block">google Login</a>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
      </div>
  </div>
</div>